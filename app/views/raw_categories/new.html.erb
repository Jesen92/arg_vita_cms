<h3>Nova Kategorija za Repromaterijal</h3>

<%= simple_form_for @subcategory, url: raw_categories_path ,html: {class: 'form-horizontal'} do |f| %>
    <%= f.input :title, label: "Naziv" %>

    <%= f.input :title_eng, label: "Naziv na Engleskom" %>

    <%= f.input :avatar, label: "Slika" , as: :file %>

    <%= f.label "Podkategorija" %>
    <%= f.association :ssubcategories, label: false, collection: Ssubcategory.all, multiple: true, :include_blank => true, :input_html => {class: 'chosen-select'} %>

    <%= f.button :submit, "Izradi kategoriju", class: "btn btn-success" %>
    <%= link_to "Cancel", raw_categories_index_path, class: "btn btn-default" %>

<% end %>