<h3>Novi Materijal</h3>

<%= simple_form_for @material, html: {class: 'form-horizontal'} do |f| %>
    <%= f.input :title, label: "Naziv" %>

    <%= f.input :title_eng, label: "Naziv na Engleskom" %>

    <%= f.input :avatar, label: "Slika" , as: :file %>

    <%= f.label "Kategorije" %>
    <%= f.association :categories, label: false, collection: Category.all, multiple: true, :include_blank => true, :input_html => {class: 'chosen-select'} %>
    <%= f.button :submit, "Izradi Materijal" %>
    <%= link_to "Cancel", materials_path, class: "btn btn-default" %>

<% end %>