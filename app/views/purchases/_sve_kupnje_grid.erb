<%= grid(@purchases_grid, show_filters: :always) do |g|

  g.column name: "ID", attribute: 'id' do |t|
    t.id
  end

  g.column name: "Cijena(ukupno)", attribute: 'total_purchase' do |t|
    number_to_currency(t.total_purchase, :unit => 'Kn', :format => "%n %u")
  end

  g.column name: "Korisnik", attribute: 'name', assoc: :user do |t|
    t.user.name unless t.user.nil? && t.nil?
  end
  
  g.column name: "Država", attribute: 'country' do |t|
    t.country
  end

  g.column name: "Grad", attribute: 'city' do |t|
    t.city
  end

  g.column name: "Adresa", attribute: 'address' do |t|
    t.address
  end

  g.column name: "Poštanski kod", attribute: 'postal_code' do |t|
    t.postal_code
  end

  g.column name: "Broj tel/mob", attribute: 'phone_num' do |t|
    t.phone_num
  end

  g.column name: "e-mail", attribute: 'email' do |t|
    t.email
  end

  g.column name: "Datum kupnje", attribute: 'created_at' do |t|
    t.created_at
  end

  g.column do |t|
    link_to('Pregled kupnje', purchase_path(id: t.id))
  end
end-%>