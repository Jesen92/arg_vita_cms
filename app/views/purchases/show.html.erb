<div class="page-header head-page">
  <h1>Prodaja - <%= @purchase_info.user.name unless @purchase_info.user.nil? %></h1>
  <h3><%= @purchase_info.created_at %></h3>
</div>

<div class="panel panel-info" style="margin-top: 10px">
  <div class="panel-heading">
    <h3 class="panel-title">Info</h3>
  </div>
  <div class="panel-body">
    <div class="row" >

          <div class="col-xs-6 col-md-2" >
            <strong>Država:</strong> <p><%= @purchase_info.country %></p>
          </div>

          <div class="col-xs-6 col-md-2" >
            <strong>Grad:</strong> <p><%= @purchase_info.city %></p>
          </div>

          <div class="col-xs-6 col-md-2" >
            <strong>Poštanski broj:</strong> <p><%= @purchase_info.postal_code %></p>
          </div>

          <div class="col-xs-6 col-md-2" >
            <strong>Adresa:</strong> <p><%= @purchase_info.address %></p>
          </div>

          <div class="col-xs-6 col-md-2" >
            <strong>Broj mobitela:</strong> <p><%= @purchase_info.phone_num %></p>
          </div>

          <div class="col-xs-6 col-md-2" >
            <strong>e-mail: </strong> <p><%= @purchase_info.email %></p>
          </div>

          <div class="col-xs-6 col-md-2" >
            <strong>Ukupna cijena: </strong> <p><%= @purchase_info.total_purchase %></p>
          </div>
    </div>
  </div>
</div>

  <%= form_tag batch_options_path, :method => :put do |f| %>

      <div style="margin-bottom: 5px;" >

        <div class="dropdown" >
          <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" style="width: 105px;">
            Opcije
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">

            <li><a><%= submit_tag "Artikli poslani!", data: {confirm: 'Jeste li sigurni da su artikli poslani?'},style: "background: white;" %></a></li>
            <li><a><%= submit_tag "Artikli nisu poslani!", data: {confirm: 'Jeste li sigurni da artikli nisu poslani?'},style: "background: white;" %></a></li>

          </ul>

          <%= submit_tag "Izbriši artikle",data: { confirm: 'Jeste li sigurni da želite obrisati odabrane artikle?' }, class: "btn btn-danger"%>
        </div>
      </div>

      <%= render partial: 'purchases/kupnje_grid' %>

      <%= render partial: 'purchases/pakupnje_grid' %>
  <% end %>