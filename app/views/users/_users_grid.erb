<%= grid(@users_grid, show_filters: :always) do |g|
  g.column name: "Id", attribute: 'id', in_csv: false , filter: false do |t|
    t.id
  end

  g.column name: "Name", attribute: 'name'  do |t|
    t.name
  end

  g.column name: "e-mail", attribute: 'email' do |t|
    t.email
  end

  g.column name: "Država", attribute: 'state', in_csv: false  do |t|
    t.state
  end

  g.column name: "Artikli Newsletter", attribute: 'articles_newsletter', in_csv: false  do |t|
    t.articles_newsletter ? '+' : '-'
  end

  g.column name: "Repromaterijal Newsletter", attribute: 'raw_articles_newsletter', in_csv: false  do |t|
    t.raw_articles_newsletter ? '+' : '-'
  end

  g.column name: "Suma kupnje", attribute: 'purchase_sum', in_csv: false  do |t|
    number_to_currency(t.purchase_sum, :unit => 'Kn', :format => "%n %u")
  end

  g.column name: "Kreiran", attribute: 'created_at', in_csv: false  do |t|
    t.created_at.strftime("%d. %m. %Y.")
  end

  g.column in_csv: false do |t|
    link_to("Pregled", users_show_path(t.id), :method => :get)
  end


end-%>