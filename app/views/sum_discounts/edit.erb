<h3>Uredi Kupon</h3>

<%= simple_form_for @sum_discount, html: {class: 'form-horizontal'} do |f| %>
    <%= f.input :sum, label: "Suma" %>

    <%= f.input :discount, label: "Popust(%)" %>

    <%= f.button :submit, "Izradi kupon", class: "btn btn-success" %>
    <%= link_to "Cancel", sum_discounts_path, class: "btn btn-default" %>
<% end %>